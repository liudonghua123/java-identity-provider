    <distributionManagement>
        <site>
            <id>site</id>
            <url>dav:${idp-module.site.url}</url>
        </site>
    </distributionManagement>

    <build>
        <!-- Exclude logs directory. -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/logs/*</exclude>
                </excludes>
            </resource>
        </resources>
